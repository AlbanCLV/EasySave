<Window x:Class="EasySaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveWPF"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ligne pour les formulaires -->
            <RowDefinition Height="*"/>
            <!-- Ligne pour le DataGrid -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Colonne gauche pour les formulaires -->
            <ColumnDefinition Width="*" />
            <!-- Colonne droite pour les autres éléments -->
        </Grid.ColumnDefinitions>

        <!-- Formulaire gauche -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10" >
            <TextBlock Name="TaskNameTextBlock" Text="Nom" FontWeight="Bold" Margin="0,10"/>
            <TextBox Name="NomTextBox" Width="300" Margin="0,5" HorizontalAlignment="Left"/>

            <TextBlock Name="SourceTextBlock" Text="Source" FontWeight="Bold" Margin="0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="SourceTextBox" Width="300" Margin="0,5" HorizontalAlignment="Left"/>
                <Button Content="..." Width="30" Margin="5,0" Click="BrowseSourceButton_Click"/>
            </StackPanel>

            <TextBlock Name="DestinationTextBlock" Text="Destination" FontWeight="Bold" Margin="0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="DestinationTextBox" Width="300" Margin="0,5" HorizontalAlignment="Left"/>
                <Button Content="..." Width="30" Margin="5,0" Click="BrowseDestinationButton_Click"/>
            </StackPanel>

            <TextBlock Name="TypeTextBLock" Text="Type" FontWeight="Bold" Margin="0,10"/>
            <ComboBox Name="TypeComboBox" Width="300" Margin="0,5" HorizontalAlignment="Left">
                <ComboBoxItem Content="Full"/>
                <ComboBoxItem Content="Differential"/>
            </ComboBox>

            <Button Name="Boutton_ADD" Content="Add" Width="300" Margin="10,10" Click="AddButton_Click" HorizontalAlignment="Left"/>
            <Button Name="Boutton_View" Content="View" Width="300" Click="ViewButton_Click" Margin="10,10" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Formulaire droit avec options Langue et Log -->
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="50,10">
            <TextBlock x:Name="LangueTextBlock" Text="Langue" FontWeight="Bold" Margin="0,10"/>
            <ComboBox Name="LangueTextBox" Margin="0,10">
                <ComboBoxItem Content="En"/>
                <ComboBoxItem Content="Fr"/>
            </ComboBox>
            <Button Name="Boutton_Langue_app" Content="Appliquer" Click="LangueExecute" Margin="0,10"/>
            <TextBlock x:Name="FichierLogTextBlock" Text="Type de fichier log" FontWeight="Bold" Margin="0,30"/>
            <ComboBox Name="FichierLogTextBox" Margin="0,10">
                <ComboBoxItem Content="json"/>
                <ComboBoxItem Content="xml"/>
            </ComboBox>
            <Button Name="Boutton_Log_app" Content="Appliquer" Click="FichierLogExecute" Margin="0,10"/>


            <Button Name="Boutton_Metier" Content="Logiciel Métiers" Click="OpenBusinessAppsWindow" Margin="0.10" />

            <Button Name="Boutton_execute_All" Content="Execute" Click="ExecuteAllButton_Click" Margin="0,10"/>

        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Name="TasksDataGrid" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" AutoGenerateColumns="False" ItemsSource="{Binding Tasks}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Path=Name, Mode=OneWay}" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="{Binding Path=SourceDirectory, Mode=OneWay}" Binding="{Binding SourceDirectory}" Width="*" />
                <DataGridTextColumn Header="{Binding Path=TargetDirectory, Mode=OneWay}" Binding="{Binding TargetDirectory}" Width="*" />
                <DataGridTextColumn Header="{Binding Path=Type, Mode=OneWay}" Binding="{Binding Type}" Width="*" />
                <DataGridTemplateColumn Header="{Binding Path=Actions, Mode=OneWay}" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Lancer" Width="100" Margin="5" Click="ExecuteButton_Click"/>
                                <Button Content="Supprimer" Width="100" Margin="5" Click="DeleteButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>