<Window x:Class="EasySaveWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySaveWPF"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="390"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="10,0,10,0" Height="260">
            <TextBlock Text="Nom" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal">
                <TextBox Name="NomTextBox" Width="300" Margin="0,5" />
            </StackPanel>

            <TextBlock Text="Source"  FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="SourceTextBox" Width="300" Margin="0,5" />
                <Button Content="..." Width="30" Margin="5,0" Click="BrowseSourceButton_Click" />
            </StackPanel>

            <TextBlock Text="Destination"  FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="DestinationTextBox" Width="300" Margin="0,5" />
                <Button Content="..." Width="30" Margin="5,0" Click="BrowseDestinationButton_Click" />
            </StackPanel>

            <TextBlock Text="Type" FontWeight="Bold" />
            <ComboBox Name="TypeComboBox" Width="300" Margin="0,5" HorizontalAlignment="Left">
                <ComboBoxItem Content="Full" />
                <ComboBoxItem Content="Differential" />
            </ComboBox>

            <Button Content="Add" Width="300" Margin="0,10" Click="AddButton_Click" HorizontalAlignment="Left" />
            <Button Content="View" Width="300" Click="ViewButton_Click" Margin="0,10" HorizontalAlignment="Left" />
        </StackPanel>

        <DataGrid Name="TasksDataGrid" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,10,10,10" AutoGenerateColumns="False" ItemsSource="{Binding Tasks}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Source" Binding="{Binding SourceDirectory}" Width="*"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding TargetDirectory}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Lancer" Width="100" Margin="5" Click="ExecuteButton_Click"/>
                                <Button Content="Supprimer" Width="100" Margin="5" Click="DeleteButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Text="Langue" Margin="50,0,50,209" Grid.Column="1" FontWeight="Bold" />
        <ComboBox Name="LangueTextBox"  Margin="50,22,50,227" Grid.Column="1" >
            <ComboBoxItem Content="En" />
            <ComboBoxItem Content="Fr" />
        </ComboBox>
        <Button Content="Appliquer" Click="LangueExecute" Margin="50,50,50,190" Grid.Column="1" />
        
        <TextBlock Text="Type de fichier log" Margin="50,85,50,165" Grid.Column="1" FontWeight="Bold"/>
        <ComboBox Name="FichierLogTextBox"  Margin="50,110,50,140" Grid.Column="1" >
            <ComboBoxItem Content="json" />
            <ComboBoxItem Content="xml" />
        </ComboBox>
        <Button Content="Appliquer" Click="FichierLogExecute" Margin="50,140,50, 100" Grid.Column="1" />

        <Button Content="Execute" Click="ExecuteAllButton_Click" Margin="25,230,25,10" Grid.Column="1" />


    </Grid>
</Window>
