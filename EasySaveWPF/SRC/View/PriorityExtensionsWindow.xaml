<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="EasySaveWPF.Views.PriorityExtensionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Extensions Prioritaires" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Liste des extensions prioritaires :" 
                       FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding PriorityExtensions}" 
                     SelectedItem="{Binding SelectedExtension}" 
                     Height="150"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBox Width="200" 
                         Text="{Binding NewExtension, UpdateSourceTrigger=PropertyChanged}" 
                         ToolTip="Exemple: .prio"/>
                <Button Content="Ajouter" Command="{Binding AddExtensionCommand}" 
                        Margin="10,0,0,0"/>
            </StackPanel>
            <Button Content="Supprimer l'extension"
                    Command="{Binding RemoveExtensionCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
