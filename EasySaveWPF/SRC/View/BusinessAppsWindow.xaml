<Window x:Class="EasySaveWPF.Views.BusinessAppsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Applications Métier" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titre -->
            <RowDefinition Height="*"/>
            <!-- Liste -->
            <RowDefinition Height="Auto"/>
            <!-- Ajout/Suppression -->
            <RowDefinition Height="Auto"/>
            <!-- Bouton Fermer -->
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Applications Métier Surveillées"
                   Name="TitreBusinessTexBLox"
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Liste des applications métier -->
        <ListBox x:Name="BusinessAppsList"
                 ItemsSource="{Binding BusinessApplications}" 
                 Grid.Row="1" Height="150" Width="350"
                 HorizontalAlignment="Center" />

        <!-- Champ de saisie et boutons -->
        <StackPanel Grid.Row="2" Margin="10">
            <!-- Zone de texte pour entrer le nom de l'application -->
            <TextBox x:Name="AppNameTextBox"
                     Width="250" Height="25"
                     Text="{Binding NewAppName, UpdateSourceTrigger=PropertyChanged}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,5"/>

            <!-- Boutons Ajouter/Supprimer -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="Boutton_ADD"
                        Content="Ajouter" Width="100"
                        Command="{Binding AddApplicationCommand}"
                        CommandParameter="{Binding Text, ElementName=AppNameTextBox}"/>

                <Button Name="Boutton_Supprimer"
                        Content="Supprimer" Width="100" Margin="10,0,0,0"
                        Command="{Binding RemoveApplicationCommand}"
                        CommandParameter="{Binding SelectedItem, ElementName=BusinessAppsList}"/>
            </StackPanel>
        </StackPanel>

        <!-- Bouton Fermer -->
        <Button Grid.Row="3" Content="Fermer"
                HorizontalAlignment="Right"
                Width="80" Margin="0,10,0,0"
                Click="CloseWindow"/>
    </Grid>
</Window>