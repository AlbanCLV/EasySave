<Window x:Class="EasySaveWPF.Views.CryptageWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cryptage" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

	<StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="50,10">
		<TextBlock x:Name="OptionTextBlock" Text="Option de Chiffrement" FontWeight="Bold" Margin="0,5"/>
		<ComboBox Name="OptionComboBox" Margin="0,10">
			<ComboBoxItem Content="Chiffrer toutes les sauvegardes"/>
			<ComboBoxItem Content="Chiffrer uniquement les extensions sélectionnées"/>
		</ComboBox>
		<TextBlock x:Name="ExtansionTextBlock" Text="Extensions à sélectionner" FontWeight="Bold" Margin="0,5"/>
		<ListBox Name="ExtensionListBox" SelectionMode="Multiple" Margin="0,10">
			<ListBoxItem Content="json"/>
			<ListBoxItem Content="xml"/>
			<ListBoxItem Content="txt"/>
			<ListBoxItem Content="csv"/>
		</ListBox>
		<Button Name="Boutton_Log_app" Content="Appliquer" Click="FichierLogExecute" Margin="0,5"/>
	</StackPanel>
</Window>
