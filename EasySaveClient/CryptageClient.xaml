<Window x:Class="EasySaveClient.CryptageClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encryption Settings" Height="300" Width="400">

    <Grid>
        <StackPanel Margin="20">

            <!-- Password Input -->
            <TextBlock Text="Encryption Password:" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>

            <!-- Encryption Options -->
            <TextBlock Text="Select an option:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox x:Name="OptionComboBox" Width="200">
                <ComboBoxItem Content="Encrypt all backups"/>
                <ComboBoxItem Content="Encrypt only specific extensions"/>
                <ComboBoxItem Content="Do not encrypt"/>
            </ComboBox>

            <!-- File Extension Selection -->
            <TextBlock Text="Select extensions to encrypt (if applicable):" FontWeight="Bold" Margin="0,10,0,0"/>
            <ListBox x:Name="ExtensionListBox" SelectionMode="Multiple" Height="60">
                <ListBoxItem Content=".txt"/>
                <ListBoxItem Content=".jpg"/>
                <ListBoxItem Content=".pdf"/>
                <ListBoxItem Content=".docx"/>
            </ListBox>

            <!-- Apply Button -->
            <Button Content="Apply" Click="Apply_Click" Width="150" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
