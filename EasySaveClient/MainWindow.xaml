<Window x:Class="EasySaveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Déportée" Height="400" Width="525">
    <Grid>
        <!-- Zone pour entrer l'IP -->
        <TextBox x:Name="IpTextBox" Width="200" Height="30" Text="127.0.0.1" 
                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Se Connecter" Click="ConnectToServer_Click"
                Width="120" Height="30" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Margin="220,10,0,0"/>

        <!-- Liste des logs -->
        <ListBox x:Name="LogsListBox" Height="200" HorizontalAlignment="Stretch" 
                 VerticalAlignment="Top" Margin="10,50,10,0"/>

        <!-- Boutons de contrôle -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="Pause" Click="PauseBackup_Click" Width="100"/>
            <Button Content="Reprendre" Click="ResumeBackup_Click" Width="100" Margin="10,0,0,0"/>
            <Button Content="Stop" Click="StopBackup_Click" Width="100" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
