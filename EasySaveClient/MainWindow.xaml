<Window x:Class="EasySaveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console Déportée" Height="550" Width="650">
    <Grid RenderTransformOrigin="0.494,0.575">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- IP & Connexion -->
            <RowDefinition Height="Auto"/>
            <!-- Liste des tâches -->
            <RowDefinition Height="Auto"/>
            <!-- Boutons d'action -->
            <RowDefinition Height="*"/>
            <!-- Logs -->
        </Grid.RowDefinitions>

        <!-- Zone pour entrer l'IP -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="10">
            <TextBox x:Name="IpTextBox" Width="200" Height="30" Text="127.0.0.1"/>
            <Button Content="Se Connecter" Click="ConnectToServer_Click"
                    Width="120" Height="30" Margin="10,0,0,0"/>
            <Button Content="Récupérer les tâches" Click="GetTasks_Click"
                    Width="150" Height="30" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Liste des tâches récupérées -->
        <ListView x:Name="TaskListView" Height="150" Width="550"
          SelectionMode="Single" SelectionChanged="TaskListView_SelectionChanged"
          HorizontalAlignment="Center" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom de la tâche" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Source" Width="150" DisplayMemberBinding="{Binding SourceDirectory}"/>
                    <GridViewColumn Header="Destination" Width="150" DisplayMemberBinding="{Binding TargetDirectory}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListBox x:Name="LogsListBox" Height="100" Width="550"
         HorizontalAlignment="Center" Grid.Row="3" Margin="10"/>


        <!-- Bouton d'exécution -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="10">
            <Button Content="Exécuter la tâche sélectionnée" Click="ExecuteTask_Click"
                    Width="250" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
